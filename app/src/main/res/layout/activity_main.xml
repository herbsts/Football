<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="herbsts.testapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Person: "
        android:id="@+id/tvChoosePerson" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Person: "
        android:id="@+id/tvChooseCar"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spPersons"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spPersons"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvChoosePerson"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spCars"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tvChooseCar"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCars"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:id="@+id/tblOutput">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameContent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="age:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgeContent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="car name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCarName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCarNameContent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="PS: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPSContent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="constructed: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvConstructed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvConstructed" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
